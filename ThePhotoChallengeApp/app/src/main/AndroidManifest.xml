<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.telerik.airelementalteam.thephotochallengeapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.telerik.airelementalteam.thephotochallengeapp.data.ThePhotoChallangeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".views.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.LoginActivity" />
        <activity android:name=".views.RegisterActivity" />
        <activity android:name=".views.HomeActivity" />
    </application>

</manifest>
